doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')

    title !{title}

    // Favicon
    //- link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

    // Core theme CSS (includes Bootstrap)
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css', rel='stylesheet')
    
    //Custom CSS
    link(href='../../public/stylesheets/style.css')
  body
  
    style
      include ../../public/stylesheets/style.css

    block nav 
      include ../includes/nav

    block main 
      // Page header with logo and tagline
      .jumbotron.header.py-5.bg-light.border-bottom.mb-0
            .container.py-5
                .text-center.my-5
                    h1.fw-bolder !{welcomeMsg}
                    p.lead.mb-0 !{welcomeDesc}
      
      // Search bar
      nav.navbar.navbar-light.bg-light.p-5.mb-3
        .container-fluid.d-flex.justify-content-center.mt-0
          form.search-bar.d-flex
            input.navbar.form-control(type='search' placeholder='Search for books, movies, & more' aria-label='Search')
            button.btn.btn-outline-primary.mx-4(type='submit') Search

      // Page content
      .container
          .row
              // Blog entries
              .col-lg-8
                  // Featured book of the month
                  .card.mb-3
                      a(href='#!')
                        img.featured-book-img.card-img-top(src='images/book_cover.png', alt='book cover image')
                      .card-body
                          .small.text-muted January 1, 2021
                          h2.card-title Featured Book of the Month: !{featuredBook}
