block content
  // Responsive navbar
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container
      img.img-thumbnail(src='/images/book.png' alt='book icon' width='40' height='32')
      a.navbar-brand.px-3(href='/') !{libTitle}
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.ms-auto.mb-2.mb-lg-0
              li.nav-item
                  a.nav-link(href='/dashboard') Home

            ul.navbar-nav.ms-auto.mb-2.mb-lg-0
              .dropdown
                button.btn.btn-danger.dropdown-toggle.dropbtn(onclick='navDropdown()') !{username}
                #myDropdown.dropdown-content
                  a(href='#') Settings
                  a(href='/user/logout') Logout
